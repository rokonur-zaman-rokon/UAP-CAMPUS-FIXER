# campus_fixer/forms.py
from django import forms
from .models import Issue, UserProfile

class IssueForm(forms.ModelForm):
    class Meta:
        model = Issue
        fields = ['title', 'description', 'location', 'specific_location', 'priority']
        # Remove: department, image, category, user_type since they don't exist in your model
        widgets = {
            'title': forms.TextInput(attrs={'class': 'form-control', 'placeholder': 'Enter issue title'}),
            'description': forms.Textarea(attrs={'class': 'form-control', 'rows': 4, 'placeholder': 'Describe the issue in detail'}),
            'location': forms.Select(attrs={'class': 'form-control'}),
            'specific_location': forms.TextInput(attrs={'class': 'form-control', 'placeholder': 'Specific room, floor, or area'}),
            'priority': forms.Select(attrs={'class': 'form-control'}),
        }
        labels = {
            'title': 'Issue Title',
            'description': 'Description',
            'location': 'General Location',
            'specific_location': 'Specific Location',
            'priority': 'Priority Level',
        }

class UserProfileForm(forms.ModelForm):
    class Meta:
        model = UserProfile
        fields = ['user_type', 'phone_number']
        # Remove any fields that don't exist in your UserProfile model
        widgets = {
            'user_type': forms.Select(attrs={'class': 'form-control'}),
            'phone_number': forms.TextInput(attrs={'class': 'form-control', 'placeholder': 'Phone number'}),
        }